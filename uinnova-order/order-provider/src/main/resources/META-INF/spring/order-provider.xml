<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
               http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="order-provider" owner="xuyy"/>

    <dubbo:monitor protocol="registry"/>

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="140.143.236.197:2181"/>
    <!--<dubbo:registry address="N/A"/>-->

    <!-- 用dubbo协议在20880端口暴露服务,当前服务发布所依赖的协议werservice、thrift、hessain、http -->
    <dubbo:protocol name="dubbo" port="20880"/>

    <dubbo:protocol name="hessian" port="8080" server="jetty"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.uinnova.order.IOrderService" ref="orderService" protocol="hessian" version="0.1.0"/>
    <dubbo:service interface="com.uinnova.order.IOrderService" ref="orderService2" protocol="hessian" version="0.2.0"/>
    <dubbo:service interface="com.uinnova.order.IOrderQueryService" ref="orderQueryService" protocol="dubbo" version="0.1.0"/>


    <!-- 和本地bean一样实现服务 -->
    <bean id="orderService" class="com.uinnova.order.OrderServiceImpl"/>
    <bean id="orderService2" class="com.uinnova.order.OrderServiceImpl2"/>
    <bean id="orderQueryService" class="com.uinnova.order.OrderQueryServiceImpl"/>

</beans>